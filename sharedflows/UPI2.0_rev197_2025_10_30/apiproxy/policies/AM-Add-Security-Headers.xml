<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-Add-Security-Headers">
    <DisplayName>AM-Add Security Headers</DisplayName>
    <Properties/>
    <Set>
        <Headers>
            <Header name="Access-Control-Allow-Origin">https://{virtualhost.name}.icicibank.com</Header>
            <Header name="Access-Control-Allow-Headers">Access-Control-Allow-Origin, Access-Control-Allow-Headers, Access-Control-Request-Method, Access-Control-Request-Headers, Origin, X-Requested-With, Content-Type, Accept, Signature, Authorization, apikey</Header>
            <Header name="X-Frame-Options">deny</Header>
            <Header name="Content-Security-Policy">script-src 'self'; image-src 'self'; frame-ancestors 'none'; default-src 'self'; object-src 'self'</Header>
            <Header name="X-XSS-protection">1; mode=block</Header>
            <Header name="Access-Control-Max-Age">3628800</Header>
            <Header name="Access-Control-Allow-Methods">POST, GET</Header>
            <Header name="Access-Control-Request-Headers">Access-Control-Allow-Origin, Access-Control-Allow-Headers, Access-Control-Request-Method, Access-Control-Request-Headers, Origin, X-Requested-With, Content-Type, Accept, Signature, Authorization, apikey</Header>
            <Header name="Access-Control-Request-Method">POST, GET</Header>
            <Header name="Cache-Control">no-store, no-cache, must-revalidate, post-check=0, pre-check=0, max-age=0</Header>
            <Header name="Pragma">no-cache</Header>
            <Header name="Expires">0</Header>
            <Header name="Strict-Transport-Security">max-age=31536000</Header>
            <Header name="x-content-type-options">nosniff</Header>
        </Headers>
    </Set>
    <Remove>
        <Headers>
            <Header name="X-ORACLE-DMS-ECID"/>
            <Header name="X-ORACLE-DMS-RID"/>
            <Header name="Pragma"/>
            <Header name="Transfer-Encoding"/>
        </Headers>
    </Remove>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>