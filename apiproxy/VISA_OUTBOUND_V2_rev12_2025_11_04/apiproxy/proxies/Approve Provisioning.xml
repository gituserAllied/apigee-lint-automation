<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="Approve Provisioning">
    <Description/>
    <DefaultFaultRule name="all">
        <AlwaysEnforce>true</AlwaysEnforce>
        <Step>
            <Name>AM-AddSecurityHeaders</Name>
        </Step>
        <Step>
            <Name>RF-NotificationAPI</Name>
            <Condition>(NotificationFlag == "true")</Condition>
        </Step>
    </DefaultFaultRule>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>RF-InvalidHTTPMethod</Name>
                <Condition>(request.verb != "POST")</Condition>
            </Step>
            <Step>
                <Name>JS-SchemaValidationApproveProvisioning</Name>
            </Step>
            <Step>
                <Name>RF-SchemaValidationError</Name>
                <Condition>{isSchemaValid == 'false'}</Condition>
            </Step>
            <Step>
                <Name>JS-DateTime</Name>
            </Step>
            <Step>
                <Name>EV-extractURI</Name>
            </Step>
            <Step>
                <Name>JS-SetNotificationAPI</Name>
            </Step>
            <Step>
                <Name>RF-NotificationAPI</Name>
                <Condition>(NotificationFlag == "true")</Condition>
            </Step>
            <Step>
                <Name>EV-APRequest</Name>
            </Step>
            <Step>
                <Name>JS-SetEncryptedData</Name>
            </Step>
            <Step>
                <Name>JC-JWSVerification</Name>
            </Step>
            <Step>
                <Name>JS-FetchDecryptedpayload</Name>
            </Step>
            <Step>
                <Name>AM-ApproveProvisioning</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <Name>EV-APResponse</Name>
            </Step>
            <Step>
                <Name>JS-SetResponseForAP</Name>
            </Step>
            <Step>
                <Name>AM-AddSecurityHeaders</Name>
            </Step>
        </Response>
    </PostFlow>
    <Flows/>
    <HTTPProxyConnection>
        <BasePath>/outbound/vtis/v2</BasePath>
        <VirtualHost>apibankingone</VirtualHost>
        <VirtualHost>apibanking</VirtualHost>
        <VirtualHost>SecureAPI</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>