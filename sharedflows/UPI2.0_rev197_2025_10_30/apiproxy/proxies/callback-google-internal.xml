<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="callback-google-internal">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PostClientFlow>
        <Request/>
        <Response>
            <Step>
                <Name>ML-MessageLogging</Name>
                <Condition>(enableLogging = "true")</Condition>
            </Step>
            <Step>
                <Name>EC-UPI</Name>
                <Condition>(messagelogging.ML-MessageLogging.failed = true) or (expressionResult != true)</Condition>
            </Step>
        </Response>
    </PostClientFlow>
    <Flows>
        <Flow name="Google Pay Token">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/api/v1/callback2/google/internal</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
        <VirtualHost>apibankingone</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>callback-google-internal</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>